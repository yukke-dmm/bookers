<div class="col-xs-3">
<h1>User info</h1>

<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
 <table>
    <thead>
    </thead>

    <tbody>
      <tr>
        <td>name</td>
          <td>
             <%= @user.name %>
            </td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
    </tbody>

 </table>
<div class="row">
<%= link_to "編集", edit_user_path %>
</div>
<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for(book) do |f| %>

  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    
    <div class=""></div>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <h4><%= f.submit 'Create Book' %></h4>
    </div>
<% end %>
</div>