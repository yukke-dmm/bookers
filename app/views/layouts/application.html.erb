      <nav class="navbar navbar-main navbar-shadow" role="navigation" id="slide-nav">
        <div class="container relative">
          <div class="navbar-header">
            <h1>Bookers</h1>

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>

          <div id="slidemenu">
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
              <% if user_signed_in? %>
                <li class="">
                  <%= link_to "Home", user_path(current_user) %>
                </li>

                <li class="">
                  <%= link_to "Users", users_path %>
                </li>

                <li class="">
                 <%= link_to 'Books', books_path %>
                </li>

                <li class="">
                  <%= link_to "logout", destroy_user_session_path, method: :delete %>
                </li>

              <% else %>
                <li class="">
                  <%= link_to "Home", root_path %>
                </li>

                <li class="">
                  <%= link_to "About", tops_about_path %>
                </li>
                <li class="">
                  <%= link_to "sign up", new_user_registration_path %>
                </li>
                <li class="">
                  <%= link_to "login", new_user_session_path %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </div>

<% if flash[:notice]%>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>




    <%= yield %>
  </body>
</html>
