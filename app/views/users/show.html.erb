<%= render 'books/form', book: @book %>
<!-- 投稿一覧 -->
<div class="col-xs-9">
<h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th> 
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
        <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
        <td><%= book.body %></td>
        <td></td>
      </tr>
    </tbody>
  <% end %>
 </table>
</div>
